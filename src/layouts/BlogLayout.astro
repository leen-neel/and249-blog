---
import '~/styles/global.scss';

import Header from '~/components/Header.astro';
import Footer from '~/components/Footer.astro';

export interface Props {
    content: {
        title: string;
        description: string;
        pubDate?: string;
        updatedDate?: string;
        heroImage?: string;
        category: string;
        tags: string[];
    };
}

const {
    content: {
        title,
        description,
        pubDate,
        updatedDate,
        heroImage,
        category,
        tags,
    },
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />

        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <title>{title}</title>
    </head>
    <body>
        <Header />
        <article>
            <img class="heroImg" src={heroImage} alt={title} />
            <h2 class="title">{title}</h2>

            <p class="date">
                Posted on <strong>
                    <time datetime={pubDate}>
                        {
                            new Date(pubDate).toLocaleDateString('en-us', {
                                year: 'numeric',
                                month: 'long',
                                day: 'numeric',
                            })
                        }
                    </time>
                </strong>
            </p>
            <p>Category: <strong>{category}</strong></p>
            <hr />
            <slot />
        </article>

        <Footer />
    </body>
</html>

<style>
    .heroImg {
        width: 100%;
        border-radius: 16px;
    }
</style>
